<p id="notice"><%= notice %></p>

<h1>Interviews</h1>

<table>
  <thead>
    <tr>
      <th>Start</th>
      <th>End</th>
      <th>Title</th>
      <th>Emails</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @interviews.each do |interview| %>
    <tr>
      <td><%= interview.start %></td>
      <td><%= interview.end %></td>
      <td><%= interview.title %></td>
      <td>
        <% interview.participants.each do |p| %>
          <%= p.email %>
        <%end%>
      </td>
      <td><%= link_to 'Show', interview %></td>
      <td><%= link_to 'Edit', edit_interview_path(interview) %></td>
      <td><%= link_to 'Destroy', interview, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Interview', new_interview_path %>